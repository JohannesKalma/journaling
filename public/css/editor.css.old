body{
    margin:0px;
}

.container{
    width: 98%;
    margin: 0 auto;
    padding: 1em 0; 
}

@media only screen and (min-width: 992px) {
  .container{
    width: 65%;
    padding: 2em 0; 
  }
}  

@media only screen and (min-width: 1200px) {
  .container{
    width: 65%;
    padding: 2em 0; 
  }
}

.metadata{  
  background-color: #949494;
}  

textarea{
    width:100%;
    height:40em;
    border:none;
    border-bottom-style: solid;
    border-bottom-width: 1px;
    border-bottom-color: #cecdcd;
    outline:none;
    resize:vertical;
}

form .header { display: table;      }

form .header_row  { display: table-row;  }

form label  { 
  display: table-cell;
  padding: 10px;
  font-family: sans-serif;
  text-align: right; 
  font-size: 14px;
}
form input  { 
  display: table-cell; }
