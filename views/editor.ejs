<h1>Editor</h1>

<style>
  textarea{
    width:100%;
    height:40em;
    border:none;
    border-bottom-style: solid;
    border-bottom-width: 1px;
    border-bottom-color: #cecdcd;
    outline:none;
    resize:vertical;
  }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.css">

<form method="POST" action="<%= process.env.BASE_URL %>/editor<%- locals._method=='POST' ? '' : '/'+data._id %>?_method=<%= _method%>" autocomplete="off">
  <input type="hidden" name="_method" value="<%= _method%>" />

  <div class="header">
    <div class="header_row">
        <label for="formTitle">Title</label>
        <input type="text" id="formTitle" name="title" value="<%= data.title %>" required/>
    </div>
  
    <div class="header_row">
        <label for="formDescription">Short description</label>
        <input type="text" id="fromDescription" name="description" value="<%= data.description %>" required/>
    </div>

    <div class="header_row">
      <label for="formJournaltype">Journal type</label>
      <input type="text" list="journalType" id="item" name="journalType" value="<%= data.journalType %>" >
      <datalist id="journalType">
        <% selectList.forEach(function(item){ %>
          <option value="<%= item %>" />
        <% }) %>
      </datalist>
    </div>
  </div>

  <div style="font-family:monospace;">
    <textarea name="content"><%= data.content %></textarea>
  </div>

  <input type="submit" value="save" />
  
</form>

<script src="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.js"></script>

<script>
    const easyMDE = new EasyMDE();
</script>
