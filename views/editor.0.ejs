<h1>
    Editor
</h1>

<form action="<%= process.env.BASE_URL %>/save" method="POST">
    <input type="hidden" name="_method" value="<%- method %>">
    <% if (method=='PUT' ) { %>
        <input type="hidden" name="_file" value="<%- file %>">
        <% } %>
            <textarea name="_document" style="width: 100%;height: 40rem;font-size: 0.75rem;"><%- content %></textarea>
            <input type="submit" value="Save">
</form>